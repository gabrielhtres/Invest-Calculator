generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum AssetType {
  stock
  etf
  bdr
  fii
  treasure
}

model Asset {
  id         Int       @id @default(autoincrement())
  userId     String
  name       String
  ticker     String
  price      Float
  quantity   Float
  total      Float
  type       AssetType
  percentage Float?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([userId])
  @@index([ticker])
}

model AssetClass {
  id         Int       @id @default(autoincrement())
  userId     String
  name       String
  type       AssetType
  percentage Int       @default(0)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([userId])
}
